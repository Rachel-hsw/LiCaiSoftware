<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/pink"
  android:gravity="center_horizontal"
  android:orientation="vertical"
  >
  <LinearLayout
  android:id="@+id/LinearLayout01"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/ydg_top_bg">
    <Button
    android:id="@+id/fanhui"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ydg_back_btn_bg"
    android:text="@string/fanhui"
    android:layout_marginLeft="10dip"
    android:layout_gravity="center_vertical">
    </Button>
    <TextView
    android:text="@string/shezhi"
    android:textSize="22dip"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="70dip"
    android:layout_gravity="center_vertical">
    </TextView>
  </LinearLayout>
  <LinearLayout
  android:id="@+id/RelativeLayout02"
  android:layout_width="260dip"
  android:layout_height="35dip"
   android:background="@drawable/ydg_textarea"
   android:layout_marginTop="6dip">
    <ImageView
    android:src="@drawable/ydg_icon_income"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    </ImageView>
    <Button
    android:id="@+id/Button01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="收入科目"
    android:background="#00000000"
    android:textColor="@color/black"
    android:textSize="22dip"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="40dip"
    >
    </Button>
  </LinearLayout>
   <LinearLayout
  android:id="@+id/RelativeLayout03"
  android:layout_width="260dip"
  android:layout_height="35dip"
  android:background="@drawable/ydg_textarea"
  android:layout_marginTop="15dip">
    <ImageView
    android:src="@drawable/ydg_icon_outlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    </ImageView>
    <Button
    android:id="@+id/Button02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="支出科目"
    android:background="#00000000"
    android:textColor="@color/black"
    android:textSize="22dip"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="40dip"
    >
    </Button>
  </LinearLayout>
  
  <LinearLayout
  android:id="@+id/RelativeLayout04"
  android:layout_width="260dip"
  android:layout_height="wrap_content"
  android:background="@drawable/ydg_textarea"
  android:layout_marginTop="15dip">
    <ImageView
    android:src="@drawable/ydg_bank_book"
    android:layout_marginLeft="5dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    </ImageView>
    <Button
    android:id="@+id/Button03"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="账      户"
    android:background="#00000000"
    android:textColor="@color/black"
    android:textSize="22dip"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="50dip"
    >
    </Button>
  </LinearLayout>
  <LinearLayout
  android:id="@+id/LinearLayout07"
  android:layout_width="260dip"
  android:layout_height="wrap_content"
  android:background="@drawable/ydg_textarea"
  android:layout_marginTop="180dip">
    <Button
    android:id="@+id/Button06"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="提醒设置"
    android:background="#00000000"
    android:textColor="@color/black"
    android:textSize="22dip"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="75dip"
    >
    </Button>
  </LinearLayout>
 
 <LinearLayout
  android:id="@+id/LinearLayout08"
  android:layout_width="260dip"
  android:layout_height="wrap_content"
  android:background="@drawable/ydg_textarea"
  android:layout_marginTop="15dip">
    <Button
    android:id="@+id/Button07"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="关      于"
    android:background="#00000000"
    android:textColor="@color/black"
    android:textSize="22dip"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="75dip"
    >
    </Button>
  </LinearLayout>
</LinearLayout>
