<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/pink"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/ydg_top_bg">
    <Button
    android:id="@+id/fanhui"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ydg_back_btn_bg"
    android:text="@string/fanhui"
    android:layout_marginLeft="10dip"
    android:layout_gravity="center_vertical">
    </Button>
    <TextView
    android:text="提醒设置"
    android:textSize="22dip"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dip"
    android:layout_gravity="center_vertical">
    </TextView>  
  </LinearLayout>

<LinearLayout
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:gravity="center_vertical"
android:layout_marginTop="20dip">
<TextView
android:text="提醒铃声"
android:layout_width="120dip"
android:layout_height="wrap_content"
android:textColor="@color/black"
android:textSize="18dip">
</TextView>
<Button
android:id="@+id/button01"
android:layout_width="160dip"
android:layout_height="wrap_content"
android:textColor="@color/black"
android:textSize="16dip"
android:background="@drawable/myselectorb">
</Button>
</LinearLayout>
<LinearLayout
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:gravity="center_vertical"
android:layout_marginTop="20dip">
<TextView
android:text="铃声音量"
android:layout_width="120dip"
android:layout_height="wrap_content"
android:textColor="@color/black"
android:textSize="18dip">
</TextView>
<SeekBar
android:id="@+id/SeekBar01"
android:layout_width="160dip"
android:layout_height="35dip"
android:max="100"
android:progress="50">
</SeekBar>
</LinearLayout>
<LinearLayout
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:gravity="center_vertical"
android:layout_marginTop="20dip">
<TextView
android:text="提醒方式"
android:layout_width="120dip"
android:layout_height="wrap_content"
android:textColor="@color/black"
android:textSize="18dip">
</TextView>
<RadioGroup
 android:id="@+id/RadioGroup02"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="vertical"
 >
<RadioButton
 android:id="@+id/RadioButton03"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="仅铃声"
 />
<RadioButton
    android:id="@+id/RadioButton04"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="仅震动"
    />
<RadioButton
    android:id="@+id/RadioButton05"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="铃声加震动"
  
    />
</RadioGroup>
</LinearLayout>
</LinearLayout>
